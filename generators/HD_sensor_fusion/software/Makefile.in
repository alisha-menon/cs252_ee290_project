prefix		:= @prefix@
abs_top_srcdir	:= @abs_top_srcdir@
XLEN            := @XLEN@
RISCVTOOLS      := @RISCVTOOLS@
ROCC = examples

.PHONY: all clean fusion32
all: fusion32

vars = \
	abs_top_srcdir=$(abs_top_srcdir) \
	XLEN=$(XLEN) \
	PREFIX=$(ROCC)-$@ \
	src_dir=$(abs_top_srcdir)/$@ \
	RISCVTOOLS=$(RISCVTOOLS)


fusion32:
	mkdir -p $@
	$(MAKE) -C $@ -f $(abs_top_srcdir)/$@/Makefile $(vars)

clean:
	$(MAKE) -C fusion32 -f $(abs_top_srcdir)/fusion32/Makefile abs_top_srcdir=$(abs_top_srcdir) PREFIX=$(ROCC)-fusion32 clean

